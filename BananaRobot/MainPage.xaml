<Page
    x:Class="BananaRobot.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BananaRobot"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Background="White">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/SplashScreen.png"/>
        </Grid.Background>
        <StackPanel Margin="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="start" Content="Start" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Center" Height="100" Width="200" Click="start_Click"/>
            <Button x:Name="stop" Content="Stop" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="100" Margin="0,10,0,0" Click="stop_Click"/>

        </StackPanel>

    </Grid>
</Page>
